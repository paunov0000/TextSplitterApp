<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TextSplitterApp</title>
    <link rel="stylesheet" href="~/css/output.css" />
    <link rel="stylesheet" href="~/css/site.output.css" />
</head>
<body>
    <div class="flex flex-col items-center">
        <header class="">
            <h1 class="inline-block bg-gradient-to-r from-amber-500 via-pink-500 to-black bg-clip-text text-3xl font-bold text-transparent">Text Splitter</h1>
        </header>
        <main role="main" class="flex gap-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
