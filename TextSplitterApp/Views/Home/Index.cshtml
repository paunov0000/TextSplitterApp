@model TextViewModel

@{
    ViewBag.Title = "Text Splitter";
}

<div class="flex justify-center gap-3">
    <form class="flex w-72 flex-col items-center gap-1" asp-controller="Home" asp-action="Index" method="post">
            <input asp-for="@Model.Text" class="border-2 w-full rounded-t-xl border-amber-400 px-1.5 py-0.5" />
            <span asp-validation-for="@Model.Text" class="text-sm italic text-red-500"></span>
            <input type="submit" value="Split" class="w-full rounded-b-xl bg-black px-5 py-1 font-semibold text-white" />
    </form>
    <div class="border-2 overflow-hidden rounded-xl border-amber-400">
        <textarea class="min-h-full px-1.5 py-0.5" rows="10">@Model.SplitText</textarea>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

