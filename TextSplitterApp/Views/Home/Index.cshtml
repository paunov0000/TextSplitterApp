@model TextViewModel

@{
    ViewBag.Title = "Text Splitter";
}

<form asp-controller="Home" asp-action="Index" method="post">
    <div class="col-12">
        <input asp-for="@Model.Text" class="mr-2" />
        <input type="submit" value="Split" class="btn btn-primary" />
    </div>
    <span asp-validation-for="@Model.Text" class="small text-danger col-2"></span>
    <div class="col-2 mt-3">
        <textarea rows="10">@Model.SplitText</textarea>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

